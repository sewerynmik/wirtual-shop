<Window x:Class="bazy3.MVVM.view.AdminView.okno"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:bazy3.MVVM.view.AdminView"
        mc:Ignorable="d"
        Background="#272537"
        WindowStyle="None" ResizeMode="NoResize"
        Title="Window" Height="100" Width="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                   Text="Czy na pewno chcesz usunąć tem przedmiot?"
                   Style="{StaticResource ModernTextBlock}"
                   FontSize="12"/>
        <Button Grid.Row="1" Grid.Column="1" 
                Content="tak"
                Style="{StaticResource ModernButton2}"
                Width="100"/>
        <Button Grid.Row="1" Grid.Column="0" 
                Content="nie"
                Style="{StaticResource ModernButton2}"
                Width="100"/>
    </Grid>
</Window>
